                     <item>AND: "Procedure performed: flexible sigmoidoscopy"  &lt;= 5 year(s) starts before or during "Measurement end date"</item>
                     <item>AND: "Laboratory test performed: fecal occult blood test (FOBT)" during "Measurement period"</item>
                  </list>
               </item>
               <item>
                  <content styleCode="Bold">Exclusions =</content>
                  <list>
                     <item>OR: <list>
                           <item>OR: "Diagnosis active: colorectal cancer"</item>
                           <item>OR: "Diagnosis inactive: colorectal cancer"</item>
                           <item>OR: "Diagnosis resolved: colorectal cancer"</item>
                           <item> starts before or during "Measurement end date"</item>
                        </list>
                     </item>
                  </list>
               </item>
