         <text>
            <list>
               <item>
                  <content styleCode="Bold">Initial Patient Population =</content>
                  <list>
                     <item>AND: "Patient characteristic: birth date"  &gt;= 50 year(s) and &lt;= 74 year(s) starts before start of "Measurement period"</item>
                  </list>
               </item>
               <item>
                  <content styleCode="Bold">Denominator=</content>
                  <list>
                     <item>AND: "Initial Patient Population"</item>
                     <item>AND: "Encounter: encounter outpatient"  &lt;= 2 year(s) starts before or during "Measurement end date"</item>
                     <item>AND NOT:
